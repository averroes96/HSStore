<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="128dp"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/mainLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                    android:id="@+id/imageIV"
                    android:layout_width="96sp"
                    android:layout_height="96sp"
                    android:layout_margin="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_image_24" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageIV"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/referenceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="5dp"
                        android:text="@string/reference"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_reference_grey" />

                    <TextView
                        android:id="@+id/typeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:alpha="0.80"
                        android:drawablePadding="5dp"
                        android:text="@string/type"
                        android:textSize="18sp"
                        android:textStyle="bold|italic"
                        app:drawableStartCompat="@drawable/ic_type_grey" />

                    <TextView
                        android:id="@+id/counterTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="5dp"
                        android:text="@string/counter"
                        android:textSize="16sp"
                        android:textStyle="italic|bold"
                        android:alpha="0.80"
                        app:drawableStartCompat="@drawable/ic_size_grey" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/colorsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4sp"
                android:maxLines="2"
                android:text="@string/colors"
                android:textSize="16sp"
                android:textStyle="italic"
                app:drawableStartCompat="@drawable/ic_color_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mainLL" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>